{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "pretty": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "target": "es2021",
    "outDir": "./dist",
    // "baseUrl": "./src",
    "experimentalDecorators": true,
    "strict": true,
    "esModuleInterop": true,
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "ts-node": {
    "files": true,
    "transpileOnly": true,
    "typeCheck": false
  },
  "include": [
    "src/**/*.ts",
    "src/types/express/index.old",
    "contabble-credentials.json"
  ],
  "exclude": ["node_modules", "src/**/*.spec.ts"]
}